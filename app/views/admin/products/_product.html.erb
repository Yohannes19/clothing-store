<div id="<%= dom_id product %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= product.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= product.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Price:</strong>
    <%= product.price %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Category:</strong>
    <%= product.category_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Active:</strong>
    <%= product.active %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show  product", [:admin, product] , class: "round-lg py-3 px-5 bg-gray-100 inline-block font-medium"%>
    <%= link_to "Edit  product",  edit_admin_product_path(product), class: "round-lg py-3 px-5 bg-gray-100 inline-block font-medium"%>
    <hr class="mt-7">
<% end %>

</div>
